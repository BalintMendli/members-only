<h2>Sign Up</h2>
<%= form_for @user do |f| %>
<%= render 'layouts/error_messages', object: f.object %>
<%= f.label :name, 'Name: ' %>
<%= f.text_field :name %><br>
<%= f.label :email, 'Email: ' %>
<%= f.email_field :email %><br>
<%= f.label :password, 'Password: ' %>
<%= f.password_field :password %><br>
<%= f.submit 'Sign Up' %>
<%end %>